<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/detail.css">
    <title><%= category.name %></title>
</head>
<body>
    <div class="container">
        <h1><%= category.name %></h1>
        <p><%= category.description %></p>
        
        <h2>Items</h2>
        <ul>
            <% items.forEach(item => { %>
                <li> 
                    <a href="/items/<%= item._id %>"> 
                        <%= item.name %>
                    </a>
                </li>
                <% }) %>
            </ul>

        <div class="actions">
            <form method="GET" action="/categories/<%= category._id %>/update">
                <button type="submit" class="edit-btn" onClick = "return confirm('Do you want to edit this Category? Please enter the Admin Password')">Edit Category</button>
            </form>

            <form method="POST" action="/categories/<%= category._id %>/delete" class="delete-row">
                <button type="submit" class="delete-btn" onClick = "return confirm('Do you want to delete this Category? Please enter the Admin Password')">Delete Category</button>
                <input type="password" name="adminPassword" placeholder="Admin Password" class="admin-inline-password" required/>
            </form>

            <a href="/categories" class="back-link">Back to Categories</a>
        </div>
    </div>
</body>
</html>